{
  "name": "ol-geom-editor",
  "version": "1.0.3",
  "description": "An elegant OpenLayers extension for editing geometric shapes.",
  "type": "module",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.iife.js",
  "jsdelivr": "dist/index.iife.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown && npm run build:sass",
    "build:sass": "sass ./src/geom-editor.scss  dist/index.css --style=compressed --no-source-map",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && npm publish",
    "postinstall": "npx simple-git-hooks",
    "format": "prettier --write ./examples"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,html,md}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/geojson": "^7946.0.16",
    "@types/node": "^22.15.17",
    "bumpp": "^10.1.0",
    "lint-staged": "^16.1.6",
    "ol": "^7.5.2",
    "prettier": "^3.6.2",
    "sass": "^1.93.0",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.11.9",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "peerDependencies": {
    "ol": ">=7"
  },
  "author": "ZhouQijun <zhouQijun4job@163.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jackchoumine/ol-geom-editor.git"
  },
  "homepage": "https://jackchoumine.github.io/ol-geom-editor/",
  "bugs": {
    "url": "https://github.com/jackchoumine/ol-geom-editor/issues"
  },
  "keywords": [
    "ol",
    "openLayers",
    "openLayers-draw-plugin",
    "openLayers-draw-extension",
    "ol-extension-editor",
    "ol-geom-editor",
    "ol-geom-modify",
    "ol-modify-shapes",
    "ol-ex",
    "ol-draw-geometry",
    "ol-geometry-draw",
    "ol-geometry-edit",
    "ol-geometry-modify",
    "ol-geometry-translate",
    "ol-feature-draw",
    "ol-feature-edit",
    "ol-feature-modify",
    "ol-feature-translate",
    "ol-edit-geometry",
    "ol-shapes",
    "ol-geom-editor",
    "ol-extension",
    "ol-ex-editor",
    "ol-ex-edit-geometry",
    "ol-draw-shapes"
  ]
}
